{% set features = [] -%}

{% for blogpost in blogposts.ordered -%}
  {% if loop.index <= 3 -%}
    {% set features = ( features.push( blogpost ), features ) -%}
  {% endif -%}
{% endfor -%}

<div class="homepage_feature row" style="justify-content: center">
{% for feature in features -%}

  <div class="column">
    <a href="{{ feature.link }}">
      <img src="{{ feature.image }}" alt="{{ feature.heading }}" />
      <section>{{ feature.heading }}</section>
      <p>{{ feature.text }}</p>
    </a>
  </div>

{% endfor -%}
</div>
